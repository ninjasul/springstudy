<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <filter>
    <filter-name>MyFilter1</filter-name>
    <filter-class>ninjasul.springmvc.MyFilter1</filter-class>
  </filter>

  <filter>
    <filter-name>MyFilter2</filter-name>
    <filter-class>ninjasul.springmvc.MyFilter2</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>MyFilter1</filter-name>
    <servlet-name>hello</servlet-name>
  </filter-mapping>

  <filter-mapping>
    <filter-name>MyFilter2</filter-name>
    <servlet-name>hello</servlet-name>
  </filter-mapping>

  <listener>
    <listener-class>ninjasul.springmvc.MyListener</listener-class>
  </listener>

  <servlet>
    <servlet-name>hello</servlet-name>
    <servlet-class>ninjasul.springmvc.HelloServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>hello</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>

</web-app>


